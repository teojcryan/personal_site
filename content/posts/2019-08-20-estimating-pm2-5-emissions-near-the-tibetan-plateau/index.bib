	urldate = {2020-06-16},
	journal = {Remote Sensing of Environment},
	author = {He, Qingqing and Huang, Bo},
	month = mar,
	year = {2018},
	keywords = {Aerosol optical depth, China, Geographically and temporally weighted regression (GTWR), Interior point algorithm (IPA), PM},
	pages = {72--83},
	file = {ScienceDirect Snapshot:C\:\\Users\\admin\\Zotero\\storage\\ADG54QAB\\S003442571730593X.html:text/html;ScienceDirect Full Text PDF:C\:\\Users\\admin\\Zotero\\storage\\SG893X6Z\\He and Huang - 2018 - Satellite-based mapping of daily high-resolution g.pdf:application/pdf}
}

