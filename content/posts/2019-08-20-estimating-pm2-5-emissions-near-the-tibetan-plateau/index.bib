	keywords = {Anthropogenic, Biomass/biofuel, Black carbon, Climate change, Tethered balloon},
	pages = {894--905},
	file = {ScienceDirect Snapshot:C\:\\Users\\admin\\Zotero\\storage\\SXXZ5AUP\\S0048969716318873.html:text/html;ScienceDirect Full Text PDF:C\:\\Users\\admin\\Zotero\\storage\\X7W8YC4B\\Bisht et al. - 2016 - Tethered balloon-born and ground-based measurement.pdf:application/pdf}
}

